  <!-- full screen QR preview (optional) -->
  <div id="qrFullOverlay" class="overlay" style="display:none;">
    <div style="max-width:520px;width:100%;padding:18px;border-radius:12px;background:#071422;border:1px solid rgba(255,255,255,0.03);">
      <button id="closeFull" class="close-x" style="position:relative;right:0;top:0">✕</button>
      <div style="text-align:center">
        <img id="qrFullImage" src="" alt="PhonePe QR Full" style="max-width:100%;height:auto;border-radius:10px;background:#fff;padding:8px" />
        <div style="color:var(--muted);margin-top:10px">Scan to pay ₹<span id="qrFullPrice"></span></div>
      </div>
    </div>
  </div>

  <script>
    // --- CONFIG: change QR image path if you have actual file ---
    // Put your PhonePe QR image file in same folder and name it: phonepe-qr.png
    // Or use a full URL: const QR_SRC = "https://example.com/phonepe-qr.png"
    const QR_SRC = "phonepe-qr.png"; // <-- replace if needed

    // WhatsApp link (user provided)
    const WA_LINK = "https://wa.me/+917280098773?text=*HELLO-SIR/MA'AM*";

    // setup
    document.getElementById('year').textContent = new Date().getFullYear();
    const products = document.querySelectorAll('.product');
    const overlay = document.getElementById('overlay');
    const modalTitle = document.getElementById('modalTitle');
    const modalPrice = document.getElementById('modalPrice');
    const modalSubtitle = document.getElementById('modalSubtitle');
    const qrImage = document.getElementById('qrImage');
    const paidBtn = document.getElementById('paidBtn');
    const waBox = document.getElementById('waBox');
    const waOpen = document.getElementById('waOpen');
    const copyBtn = document.getElementById('copyBtn');
    const showQRBtn = document.getElementById('showQRBtn');
    const qrFullOverlay = document.getElementById('qrFullOverlay');
    const qrFullImage = document.getElementById('qrFullImage');
    const qrFullPrice = document.getElementById('qrFullPrice');
    const closeFull = document.getElementById('closeFull');
    const closeModal = document.getElementById('closeModal');

    // set QR src (placeholder)
    qrImage.src = QR_SRC;
    qrFullImage.src = QR_SRC;

    let current = null;

    products.forEach(p => {
      p.addEventListener('click', () => {
        const name = p.getAttribute('data-name');
        const price = p.getAttribute('data-price');
        current = {name, price};
        openModal(name, price);
      });
    });

    function openModal(name, price){
      modalTitle.textContent = `Buy — ${name}`;
      modalPrice.textContent = `₹${price}/-`;
      modalSubtitle.textContent = `Scan the PhonePe QR to pay. Price: ₹${price}/-`;
      qrImage.src = QR_SRC;
      qrFullImage.src = QR_SRC;
      qrFullPrice.textContent = price;
      waBox.style.display = "none";
      overlay.style.display = "flex";
      overlay.setAttribute('aria-hidden','false');
    }

    closeModal.addEventListener('click', closeModalFn);
    overlay.addEventListener('click', function(e){
      if(e.target === overlay) closeModalFn();
    });

    function closeModalFn(){
      overlay.style.display = "none";
      overlay.setAttribute('aria-hidden','true');
    }

    // "I HAVE PAID" logic: show WhatsApp link (client-side)
    paidBtn.addEventListener('click', () => {
      // In a real app, verify payment server-side. Here we simply show WhatsApp link after user clicks.
      waBox.style.display = "block";
      // set WA link with prefilled message including course name
      const messageText = encodeURIComponent(`Hi, maine ${current.name} (₹${current.price}) purchase kar liya. Please share course access.`);
      waOpen.href = "https://wa.me/+917280098773?text=" + messageText;
    });

    // copy link
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(waOpen.href);
        copyBtn.textContent = "Copied!";
        setTimeout(()=> copyBtn.textContent = "Copy WhatsApp Link", 1800);
      } catch (e) {
        copyBtn.textContent = "Copy failed";
      }
    });

    // show full QR
    showQRBtn.addEventListener('click', () => {
      qrFullOverlay.style.display = "flex";
    });
    closeFull.addEventListener('click', () => qrFullOverlay.style.display = "none");
    qrFullOverlay.addEventListener('click', function(e){
      if(e.target === qrFullOverlay) qrFullOverlay.style.display = "none";
    });

    // accessibility: Esc to close modals
    document.addEventListener('keydown', (e) => {
      if(e.key === 'Escape'){
        if(overlay.style.display === 'flex') closeModalFn();
        if(qrFullOverlay.style.display === 'flex') qrFullOverlay.style.display = 'none';
      }
    });

    // If user hasn't replaced QR image, show minimal placeholder (in some browsers)
    qrImage.onerror = () => {
      qrImage.style.background = '#fff';
      qrImage.style.height = '100%';
      qrImage.style.width = '100%';
      qrImage.alt = "Please replace phonepe-qr.png with your PhonePe QR image in the site folder";
      // optional: display text overlay
      qrImage.parentElement.innerHTML = '<div style="padding:12px;color:#071427;font-weight:700;text-align:center">Replace <code>phonepe-qr.png</code> with your PhonePe QR image in the same folder.</div>';
    };
  </script>
